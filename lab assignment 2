//Q.2 The distance between two cities (in kms) is input through the keyboard. Write a program to convert and print this distance in meters, feet, inches and centimeters.
#import <iostream>
using namespace std;
int main(){
	int distance;
	cout<<"Enter distance in kms: "<<endl;
	cin>>distance;
	cout<<"Meters :"<<distance*1000<<" m"<<endl;
	cout<<"Feet: "<<distance*3280<<" ft"<<endl;
	cout<<"Inches: "<<distance*39370<<" inch"<<endl;
	cout<<"Centimeteres: "<<distance*100000<<" cm"<<endl;
	return 0;
}

//Q.3 Enter 4 digit numbers through keyboard. Write a program to obtain the sum of 1st and last digits of this number.
#include <iostream>
using namespace std;
int main(){
	int num,first,second,third,fourth;
	cout<<"Enter 4 digit number: ";
	cin>>num;
	first = num/1000;
	num =num%1000;
	second = num/100;
	num = num%100;
	third = num/10;
	num = num%10;
	fourth = num/1;
	num = num/1;
	cout<<"Sum: "<<first+fourth<<endl;
	return 0;
}

//Q.5 Write the program that gets the total expenses. 
#include <iostream>
using namespace std;
int main(){
	float brand,travel,food,logistics,total;
	cout<<"Enter branding expenses: "<<endl;
	cin>>brand;
	cout<<"Enter travel expenses: "<<endl;
	cin>>travel;
	cout<<"Enter food expenses: "<<endl;
	cin>>food;
	cout<<"Enter logistics expenses: "<<endl;
	cin>>logistics;
	total = brand+travel+food+logistics;
	cout<<"Total expenses: "<<total<<" Rupees"<<endl;
	cout<<"Branding expenses percentage: "<<brand/total*100<<"%"<<endl;
	cout<<"Travel expenses percentage: "<<travel/total*100<<"%"<<endl;
	cout<<"Food expenses percentage: "<<food/total*100<<"%"<<endl;
	cout<<"Logistics expenses percentage: "<<logistics/total*100<<"%"<<endl;
	return 0;
}

//Q.6 cm to m and km
#include <iostream>
using namespace std;
int main(){
	float cm,m,km;
	cout<<"Enter distance in cm: "<<endl;
	cin>>cm;
	m=cm/100;
	km=cm/100000;
	cout<<m<<" meters"<<endl;
	cout<<km<<" kilometers"<<endl;
	return 0;
}


//Q.7 Simple Interest Calculator
#include <iostream>
using namespace std;
int main(){
	float p,r,t,si;
	cout<<"Enter principal amount(in rupees): "<<endl;
	cin>>p;
	cout<<"Enter interest rate(%): "<<endl;
	cin>>r;
	cout<<"Enter time period(in years): "<<endl;
	cin>>t;
	si = p*r*t/100;
	cout<<"Simple Interest: "<<si<<" Rupees"<<endl;
	return 0;
}

//Q.8 Marks
#include <iostream>
using namespace std;
int main(){
	float e,p,c,m,cs,h,total;
	cout<<"Enter english marks out of 100: "<<endl;
	cin>>e;
	cout<<"Enter physics marks out of 100: "<<endl;
	cin>>p;
	cout<<"Enter chemistry marks out of 100: "<<endl;
	cin>>c;
	cout<<"Enter maths marks out of 100: "<<endl;
	cin>>m;
	cout<<"Enter computer science marks out of 100: "<<endl;
	cin>>cs;
	cout<<"Enter hindi marks out of 100: "<<endl;
	cin>>h;
	total = e+p+c+m+cs+h;
	cout<<"Aggregate: "<<total/6<<endl;
	cout<<"Percentage: "<<total/600*100<<"%"<<endl;
	return 0;
}


//Q.9 Lowest no.of notes calculator
#include <iostream>
using namespace std;
int main(){
    int rs100,rs50,rs10,rs5,rs2,rs1,amt;
    cout<<"Enter amount: ";
    cin>>amt;

    rs100 = amt/100;
    amt = amt%100;

    rs50 = amt/50;
    amt = amt%50;

    rs10 = amt/10;
    amt = amt%10;

    rs5 = amt/5;
    amt = amt%5;

    rs2 = amt/2;
    amt = amt%2;

    rs1 = amt;  

    if (rs100>0){
        cout<<"100 rupee notes: "<<rs100<<endl;
    }
    
    if (rs50>0){
        cout<<"50 rupee notes: "<<rs50<<endl;
    }
    
    if (rs10>0){
        cout<<"10 rupee notes: "<<rs10<<endl;
    }
    
    if (rs5>0){
        cout<<"5 rupee notes: "<<rs5<<endl;
    }
    
    if (rs2>0){
        cout<<"2 rupee notes: "<<rs2<<endl;
    }
    
    if (rs1>0){
        cout<<"1 rupee notes: "<<rs1<<endl;
    }
    
    return 0;
}

//Q.11 Leap year conditional operator
#include <iostream>;
using namespace std;
int main(){
    int year;
    cout<<"Enter the year: "<<endl;
    cin>>year;
    if (year%4==0){
        cout<<"The year "<<year<<" is a leap year!";
    }
    else{
        cout<<"The year "<<year<<" is not a leap year!";
    }
    
    return 0;
}



//Q.13 swapping two numbers
#include <iostream>
using namespace std;
int main(){
    int num1,first,second;
    cout<<"Enter a two digit number: ";
    cin>>num1;
    first = num1/10;
    num1 = num1%10;
    second = num1;
    cout<<second<<first<<endl;
    return 0;
}


// Q.14 ASCII Code
#include <iostream>
using namespace std;
int main(){
    char character;
    cout<<"Enter character: ";
    cin>>character;
    cout<<"ASCII Code is: "<<static_cast<int>(character)<<endl;
    
    return 0;
}


//Q.15 Number of people who attended the event over a course of three days
#include <iostream>
using namespace std;
int main(){
    int x,n,day1,day2,day3;
    cout<<"Enter total no.of people: ";
    cin>>n;
    x=2*n/7;
    day1 = x;
    day2 = 2*x;
    day3 = x/2;
    cout<<day1<<" people"<<endl;
    cout<<day2<<" people"<<endl;
    cout<<day3<<" people"<<endl;
    return 0;
}


